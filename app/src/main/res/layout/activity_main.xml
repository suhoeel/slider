<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.portfolio.myapplication.VerticalSlider
        android:layout_width="150dp"
        android:layout_height="500dp"
        android:id="@+id/slider"
        app:sliderBackgroundColor="@color/purple_700"
        app:sliderBarColor="@color/purple_200"
        app:sliderBorderRadius="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/slider2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/text_slider"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="@id/slider"
        app:layout_constraintRight_toRightOf="@id/slider"
        app:layout_constraintBottom_toBottomOf="@id/slider"
        />

    <com.portfolio.myapplication.VerticalSlider
        android:layout_width="150dp"
        android:layout_height="500dp"
        android:id="@+id/slider2"
        app:sliderBackgroundColor="@color/teal_200"
        app:sliderBarColor="@color/teal_700"
        app:sliderBorderRadius="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/slider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/text_slider2"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="@id/slider2"
        app:layout_constraintRight_toRightOf="@id/slider2"
        app:layout_constraintBottom_toBottomOf="@id/slider2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>